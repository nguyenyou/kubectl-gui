{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "kubectl-gui",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "kubectl-get-pods",
            "cmd": "kubectl",
            "args": ["get", "pods"]
          },
          {
            "name": "kubectl-config-current-context",
            "cmd": "kubectl",
            "args": ["config", "current-context"]
          },
          {
            "name": "kubectl-describe-pod",
            "cmd": "kubectl",
            "args": ["describe", "pods", { "validator": "\\S+" }]
          },
          {
            "name": "kubectl-delete-pod",
            "cmd": "kubectl",
            "args": ["delete", "pods", { "validator": "\\S+" }]
          },
          {
            "name": "kubectl-get-pod-yaml",
            "cmd": "kubectl",
            "args": ["get", "pods", { "validator": "\\S+" }, "-o", "yaml"]
          },
          {
            "name": "kubectl-get-logs",
            "cmd": "kubectl",
            "args": ["logs", { "validator": "\\S+" }, "--tail", "200"]
          },
          {
            "name": "kubectl-get-logs-stream",
            "cmd": "kubectl",
            "args": ["logs", { "validator": "\\S+" }, "--follow", "--tail", { "validator": "\\S+" }]
          },
          {
            "name": "kubectl-get-services",
            "cmd": "kubectl",
            "args": ["get", "services"]
          },
          {
            "name": "kubectl-get-deployments",
            "cmd": "kubectl",
            "args": ["get", "deployments"]
          },
          {
            "name": "kubectl-get-contexts",
            "cmd": "kubectl",
            "args": ["config", "get-contexts"]
          },
          {
            "name": "kubectl-switch-context",
            "cmd": "kubectl",
            "args": ["config", "use-context", { "validator": "\\S+" }]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tunguyen.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "kubectl GUI",
        "width": 1200
      }
    ]
  }
}
